{
  "name": "your-service-name",
  "version": "1.0.0",
  "description": "Your microservice description",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "cdk": "cdk",
    "cdk:dev": "cdk --context environment=dev",
    "cdk:staging": "cdk --context environment=staging",
    "cdk:prod": "cdk --context environment=prod",
    "deploy:dev": "npm run cdk:dev deploy",
    "deploy:staging": "npm run cdk:staging deploy",
    "deploy:prod": "npm run cdk:prod deploy",
    "localstack:start": "docker compose up -d",
    "localstack:stop": "docker compose down",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "ci:test": "npm run lint && npm run typecheck && npm run test",
    "ci:build": "npm run ci:test && npm run build",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "aws-cdk": "^2.95.1",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.410.0",
    "@aws-sdk/client-s3": "^3.410.0",
    "@aws-sdk/client-secrets-manager": "^3.410.0",
    "@aws-sdk/client-sqs": "^3.410.0",
    "@aws-sdk/lib-dynamodb": "^3.410.0",
    "aws-cdk-lib": "^2.95.1",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.2.69",
    "ulid": "^2.3.0"
  },
  "keywords": [
    "microservice",
    "aws",
    "lambda",
    "typescript"
  ],
  "author": "Your Team",
  "license": "MIT"
}